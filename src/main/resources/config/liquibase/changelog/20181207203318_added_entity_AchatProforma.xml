    <!--
        Added the entity AchatProforma.
    -->
    <changeSet id="20181207203318-1" author="jhipster">
        <createTable tableName="achat_proforma">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="id_proforma" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="nombre_tc" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="cout_fob" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="cout_fret" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="montant_total" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="numero_bon_proforma" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="type_acht" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="poids" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="date_proforma" type="date">
                <constraints nullable="true" />
            </column>

            <column name="achat_dossier_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        
    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->
</databaseChangeLog>
